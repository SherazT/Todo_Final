
<p id="notice"><%= notice %></p>
<h1>All Items</h1>

<table>
<h3>Task Description</h3>
  <tbody>
    <% @items.each do |item| %>
      <tr>
      	<% if item.completed? %>
          <td><strike><%= item.Task %><strike></td>
          <td><strike><%= item.description %><strike></td>
          <td><%= link_to 'Mark as incomplete', item_path(item, item: { completed: "0" }), method: :put %></td>
          <% else %>
          <td><%= item.Task %></td>
          <td><%= item.description %></td>
          <td><%= link_to 'Mark as complete', item_path(item, item: { completed: "1" }), method: :put %></td>
          <% end %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  </tbody>
</table>

<br>


<%= link_to 'New Task', new_item_path %>
